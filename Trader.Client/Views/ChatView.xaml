<UserControl x:Class="Trader.Client.Views.ChatView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800">

    <StackPanel Background="#2C2F33">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition MinHeight="35"/>
            </Grid.RowDefinitions>
            <!--TODO: calculate textBlock height onWindowResize-->
            <TextBox ScrollViewer.HorizontalScrollBarVisibility="Disabled" BorderThickness="1" ScrollViewer.VerticalScrollBarVisibility="Hidden" 
                     IsReadOnly="True"
                     Background="#2C2F33" Foreground="White" Grid.Row="0" Margin="5" MinHeight="350" MaxHeight="360" Text="{Binding Output}"/>
            <TextBox Grid.Row="1" Text="{Binding Input, UpdateSourceTrigger=PropertyChanged}" Foreground="White" Background="#23272A" FontSize="16" 
                    MinHeight="35" Margin="10">
                <TextBox.InputBindings>
                    <KeyBinding Key="Enter" Command="{Binding EnterKeyCommand}"/>
                </TextBox.InputBindings>
            </TextBox>
        </Grid>
    </StackPanel>
</UserControl>
