<UserControl x:Class="Trader.Client.CoreUI.ChineseChess.ChessPiece"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Trader.Client.CoreUI.ChineseChess"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="400">
    <Grid>
        <Ellipse  x:Name="Piece" RenderTransformOrigin="0.5,0.5"  Margin="30,30,30,30" StrokeThickness="2" Fill="DarkBlue">
        </Ellipse>
        <TextBlock x:Name="Title" HorizontalAlignment="Center" Margin="0,209,0,0" TextWrapping="Wrap" Text="XXX" VerticalAlignment="Center"/>
    </Grid>
</UserControl>
